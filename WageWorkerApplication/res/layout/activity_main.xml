<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F5F5F5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/blackback"
            android:gravity="center"
            android:text="Post Details of your JOB"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etJobDisc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittex_bg"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="Job Discription"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/etJobStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittex_bg"
            android:drawableLeft="@drawable/email"
            android:editable="false"
            android:ems="10"
            android:hint="Start Date"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/etJobEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittex_bg"
            android:drawableLeft="@drawable/email"
            android:editable="false"
            android:ems="10"
            android:hint="End Date"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textColorHint="#bbbbbb" />

        <EditText
            android:id="@+id/etremuneration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittex_bg"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="Remuneration"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:inputType="number"
            android:textColorHint="#bbbbbb" />
        
        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittex_bg"
            android:drawableLeft="@drawable/email"
            android:ems="10"
            android:hint="Location"
            android:maxLines="5"
            android:padding="10dp"
            android:paddingTop="25dp"
            android:textColorHint="#bbbbbb" />
        
        <Button
            android:id="@+id/btnPost"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="#379735"
            android:padding="10dp"
            android:text="Post Job"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
        
         <Button
            android:id="@+id/btnOldJobs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="#379735"
            android:padding="10dp"
            android:text="Review Older Jobs"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>